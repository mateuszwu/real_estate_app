<div id="<%= dom_id property_type %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= property_type.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this property type", property_type, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this property type', edit_property_type_path(property_type), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>

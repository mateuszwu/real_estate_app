<div id="<%= dom_id property %>">
  <p class="my-5">
    <%= image_tag(property.image, alt: "Property #{property.title} image", class: 'card-img-top img-fluid img-thumbnail') %>
  </p>

  <div id="toast-simple" class="flex items-center w-full max-w-xs p-4 space-x-4 text-gray-500 bg-white divide-x divide-gray-200 rounded-lg shadow dark:text-gray-400 dark:divide-gray-700 space-x dark:bg-gray-800 ml-auto mr-0 max-w-fit text-2xl" role="alert">
    <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" class="w-8 h-8 text-blue-600 dark:text-blue-500"k>
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <div class="pl-4 text-2xl font-normal"><%= number_to_currency(property.price, separator: ',', delimiter: ' ', precision: 0, unit: '') %></div>
  </div>

  <span class="bg-blue-100 hover:bg-blue-200 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-blue-400 border border-blue-400">
    <%= property.city.name %>
  </span>
  <span class="bg-blue-100 hover:bg-blue-200 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-blue-400 border border-blue-400">
    <%= property.property_type.name %>
  </span>

  <p class="my-5">
    <h3 class="text-3xl font-extrabold dark:text-white">
      <%= property.title %>
    </h3>
  </p>

  <hr class="h-px my-8 bg-gray-200 border-0 dark:bg-gray-700">

  <p class="mb-3 font-light text-gray-500 dark:text-gray-400">
    <%= property.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this property", property, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this property', edit_property_path(property), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
